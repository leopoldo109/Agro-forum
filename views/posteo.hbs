{{#posteo}}
<div class="container color-container my-4 py-4 text-white rounded justify-content-center " id="collapseExample">
    <div class="row d-flex py-2 mx-2 align-items-center justify-content-center">
      <div class="col-6">
        <img src="/{{imagen}}" alt="" class="d-flex img-fluid rounded justify-content-md-center shadow mb-4">
      </div>
      <div class="col-12 color-secondary rounded shadow text-center py-2">
        <h1>{{titulo}}</h1>
        <h3 class="my-3 text-sec fw-2">{{categoria}}</h3>
        {{contenido_planta}}
      </div>
    </div>
{{/posteo}}
  <div class="row">
    {{#if t}}
    <div class="col-4 mb-3 d-flex justify-content-center">
      <button type="button" class="btn btn-danger ms-4 mt-3"  data-bs-toggle="modal" data-bs-target="#exampleModal"> Modificar Post </button> 
    </div>
    {{/if}}
  </div>
</div>

<!-- Edicion de datos del usuario -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content p-3 mt-2  card-login card-color">
      <div class="model-body">
        </div>
        <form action="/posteo" method="POST" enctype="multipart/form-data">
          {{#posteo}}
          <div class="row g-3 mb-3">
            <div class="col-md-6">
              <label for="validationDefault02" class="form-label"> <em>Titulo del post</em> </label>
              <input type="text" class="form-control" name="titulo" value="{{titulo}}">
            </div>
            <div class="col-md-6">
              <label for="validationDefault02" class="form-label"> <em>contenido del post</em> </label>
              <input type="text" class="form-control" name="contenido_planta" value="{{contenido_planta}}">
            </div>
            <div class="col-md-6">
              <label for="validationDefault02" class="form-label"> <em>categoria</em> </label>
              <input type="text" class="form-control" name="categoria" value="{{categoria}}">
            </div>
            <div class="col-md-6">
              <label for="validationDefaultUsername" class="form-label">Cambiar imagen</label>
              <input
                    type="file"
                    class="form-control"
                    placeholder="img"
                    aria-label="Dollar amount (with dot and two decimal places)"
                    aria-describedby="basic-addon1"
                    name="imagen"
                    value="{{imagen}}"
                />
            </div>
          <div class="row g-3">
            <button class="btn btn-success" name="id"  value="{{id_post}}"type="submit">Guardar cambios</button>
          </div>
          </div>
        {{/posteo}}
        </form>
      </div>
  </div>
</div>


