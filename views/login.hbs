  <body class="login-background-color">

  <!-- Scripts JS para Bootstrap -->
  <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>

    <div class="container-fluid text-center">
      <div class="row vh-100 align-items-center justify-content-center">
        <div class=" card-login rounded p-3 col-sm-6 col-md-4 col-lg-4">
            <img src="/img/plant-happy.gif" alt="planta feliz" width="50%"  height="auto" class="img-fluid">
            <form>
              <div class="mb-1">
                <h2>Bienvenido!</h2>
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" class="form-control rounded-pill" id="exampleInputEmail1" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text">No te preocupes, nunca compartiremos tu mail con nadie ;)</div>
              </div>
              <div class="mb-1 ">
                <label for="exampleInputPassword1" class="form-label">Contrase√±a</label>
                <input type="password" class="form-control  rounded-pill ps-1" id="exampleInputPassword1">
              </div>
              <div class="mb-1 form-check text-start">
                <input type="checkbox" class="form-check-input " id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Recordarme</label>
              </div>
              <button type="submit" class=" btn btn-success">
                <a href="/" class="nav-link link-light">Ingresar!</a> 
              </button>
            </form>
        </div>
      </div>
    </div>
